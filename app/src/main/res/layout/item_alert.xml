<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_alert"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    app:cardCornerRadius="10dp" app:cardElevation="3dp"
    android:layout_margin="6dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="14dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:layout_marginBottom="4dp">
            <TextView android:id="@+id/tv_alert_type" android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_weight="1"
                android:textSize="14sp" android:textStyle="bold" android:text="Alert Type" />
            <TextView android:id="@+id/tv_alert_severity" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="12sp"
                android:textStyle="bold" android:text="High" android:paddingStart="8dp"
                android:paddingEnd="8dp" android:paddingTop="2dp" android:paddingBottom="2dp" />
        </LinearLayout>
        <TextView android:id="@+id/tv_alert_message" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textSize="13sp"
            android:textColor="@color/colorTextPrimary" android:layout_marginBottom="6dp" />
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/tv_alert_village" android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_weight="1"
                android:textSize="12sp" android:textColor="@color/colorTextSecondary" />
            <TextView android:id="@+id/tv_alert_timestamp" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="11sp"
                android:textColor="@color/colorTextSecondary" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
