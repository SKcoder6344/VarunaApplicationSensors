<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_alerts.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:background="@color/colorBackground">

    <!-- Summary Bar -->
    <TextView android:id="@+id/tv_alert_summary"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:padding="12dp" android:background="@color/colorPrimary"
        android:textColor="@android:color/white" android:textSize="13sp"
        android:gravity="center" android:text="Loading alerts..." />

    <!-- Filter Chips -->
    <HorizontalScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:paddingStart="12dp" android:paddingEnd="12dp" android:paddingTop="8dp"
        android:paddingBottom="8dp" android:background="@color/colorSurface">
        <com.google.android.material.chip.ChipGroup android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:singleSelection="true">
            <com.google.android.material.chip.Chip android:id="@+id/chip_all"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="All" style="@style/Widget.MaterialComponents.Chip.Filter" />
            <com.google.android.material.chip.Chip android:id="@+id/chip_water_quality"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Water Quality" style="@style/Widget.MaterialComponents.Chip.Filter" />
            <com.google.android.material.chip.Chip android:id="@+id/chip_disease_risk"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Disease Risk" style="@style/Widget.MaterialComponents.Chip.Filter" />
            <com.google.android.material.chip.Chip android:id="@+id/chip_emergency"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Emergency" style="@style/Widget.MaterialComponents.Chip.Filter" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <ProgressBar android:id="@+id/progress_bar" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center"
        android:visibility="gone" android:layout_marginTop="32dp" />

    <TextView android:id="@+id/tv_no_alerts" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="No alerts yet. Keep monitoring!"
        android:gravity="center" android:padding="48dp" android:textColor="@color/colorTextSecondary"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_alerts"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="1" android:padding="8dp"
        android:clipToPadding="false" />

</LinearLayout>
